{
  "name": "polkadot-whale-monitor",
  "version": "1.0.0",
  "description": "Real-time whale monitoring for Polkadot network",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js --dev",
    "test": "node test.js",
    "demo": "node index.js --demo",
    "demo:fast": "node index.js --demo --fast",
    "test:unit": "node tests/unit/*.js",
    "test:integration": "node tests/integration/*.js",
    "reset": "rm -rf data/snapshots/*.json && echo 'Data reset complete'",
    "web": "node server.js",
    "monitor-with-web": "npm run start & npm run web",
    "logs:clean": "node scripts/clean-logs.js",
    "logs:tail": "node scripts/tail-logs.js",
    "logs:tail:alerts": "node scripts/tail-logs.js alerts",
    "logs:tail:errors": "node scripts/tail-logs.js error"
  },
  "keywords": [
    "polkadot",
    "whale",
    "monitoring",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "chalk": "^4.1.2",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "limiter": "^2.1.0",
    "lru-cache": "^10.1.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.5",
    "p-retry": "^4.6.2",
    "socket.io": "^4.8.1",
    "tail": "^2.2.6",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
