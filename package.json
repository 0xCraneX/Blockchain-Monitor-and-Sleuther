{
  "name": "polkadot-analysis-tool",
  "version": "0.1.0",
  "description": "A focused blockchain investigation tool for exploring address relationships in the Polkadot ecosystem",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:cors": "playwright test cors-websocket",
    "test:e2e:console": "playwright test browser-console",
    "test:e2e:smoke": "playwright test smoke-test",
    "test:e2e:edge": "playwright test data-edge-cases",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:watch": "vitest watch",
    "playwright:install": "playwright install",
    "playwright:report": "playwright show-report",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "migrate": "node scripts/migrate.js",
    "migrate:rollback": "node scripts/migrate.js rollback",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:watch": "webpack --mode development --watch",
    "build:analyze": "webpack --mode production --analyze",
    "serve": "webpack serve --mode development",
    "clean": "rm -rf dist",
    "logs": "node scripts/monitor-logs.js",
    "logs:error": "node scripts/monitor-logs.js -l ERROR",
    "logs:debug": "node scripts/monitor-logs.js -l DEBUG",
    "logs:stats": "node scripts/monitor-logs.js --stats",
    "logs:graph": "node scripts/monitor-logs.js -c GraphController",
    "logs:db": "node scripts/monitor-logs.js -g database_query",
    "logs:ws": "node scripts/monitor-logs.js -g websocket",
    "dev:debug": "LOG_LEVEL=debug ENABLE_FILE_LOGGING=true nodemon src/index.js",
    "precheck": "node scripts/pre-deployment-check.js",
    "test:predeploy": "npm run lint && npm run test:all && npm run precheck"
  },
  "keywords": [
    "polkadot",
    "blockchain",
    "analysis",
    "investigation",
    "visualization"
  ],
  "author": "Polkadot Analysis Team",
  "license": "MIT",
  "dependencies": {
    "@polkadot/api": "^16.4.1",
    "@polkadot/util-crypto": "^13.2.3",
    "better-sqlite3": "^9.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "d3": "^7.9.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "isomorphic-dompurify": "^2.26.0",
    "node-fetch": "^3.3.2",
    "pino": "^8.17.2",
    "socket.io": "^4.6.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@playwright/test": "^1.54.1",
    "@types/better-sqlite3": "^7.6.9",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "babel-loader": "^9.2.1",
    "chalk": "^5.4.1",
    "css-loader": "^6.11.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.54.1",
    "socket.io-client": "^4.8.1",
    "style-loader": "^3.3.4",
    "supertest": "^6.3.4",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "overrides": {
    "esbuild": "^0.25.6",
    "vite": "^7.0.4",
    "vitest": {
      "vite": "^7.0.4",
      "esbuild": "^0.25.6"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
