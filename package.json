{
  "name": "polkadot-analysis-tool",
  "version": "0.1.0",
  "description": "A focused blockchain investigation tool for exploring address relationships in the Polkadot ecosystem",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest watch",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "migrate": "node scripts/migrate.js",
    "migrate:rollback": "node scripts/migrate.js rollback",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:watch": "webpack --mode development --watch",
    "build:analyze": "webpack --mode production --analyze",
    "serve": "webpack serve --mode development",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "polkadot",
    "blockchain",
    "analysis",
    "investigation",
    "visualization"
  ],
  "author": "Polkadot Analysis Team",
  "license": "MIT",
  "dependencies": {
    "@polkadot/api": "^16.4.1",
    "@polkadot/util-crypto": "^13.2.3",
    "better-sqlite3": "^9.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "d3": "^7.9.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.26.0",
    "node-fetch": "^3.3.2",
    "pino": "^8.17.2",
    "socket.io": "^4.6.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/better-sqlite3": "^7.6.9",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "css-loader": "^6.11.0",
    "date-fns": "^4.1.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "socket.io-client": "^4.8.1",
    "style-loader": "^3.3.4",
    "supertest": "^6.3.4",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "overrides": {
    "esbuild": "^0.25.6",
    "vite": "^7.0.4",
    "vitest": {
      "vite": "^7.0.4",
      "esbuild": "^0.25.6"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
