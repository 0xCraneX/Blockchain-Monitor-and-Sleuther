{
  "name": "polkadot-analysis-tool",
  "version": "0.1.0",
  "description": "A focused blockchain investigation tool for exploring address relationships in the Polkadot ecosystem",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:watch": "vitest watch",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "migrate": "node scripts/migrate.js",
    "migrate:rollback": "node scripts/migrate.js rollback",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development"
  },
  "keywords": [
    "polkadot",
    "blockchain",
    "analysis",
    "investigation",
    "visualization"
  ],
  "author": "Polkadot Analysis Team",
  "license": "MIT",
  "dependencies": {
    "@polkadot/api": "^10.11.2",
    "@polkadot/util-crypto": "^12.6.2",
    "better-sqlite3": "^9.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "d3": "^7.9.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "pino": "^8.17.2",
    "socket.io": "^4.6.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4",
    "vitest": "^1.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}