# Polkadot Whale Monitor Configuration
# Copy this file to .env and update with your values

# Subscan API Configuration
SUBSCAN_API_KEY=your_api_key_here

# Monitoring Settings
CHECK_INTERVAL_MINUTES=60        # How often to check for changes (in minutes)
TOP_ACCOUNTS_LIMIT=1000         # Number of top accounts to monitor
DATA_PATH=./data                # Path to store snapshots and alerts

# Pattern Detection Thresholds
DORMANT_DAYS_NOTABLE=30         # Days of inactivity for notable alert
DORMANT_DAYS_CRITICAL=180       # Days of inactivity for critical alert
LARGE_MOVEMENT_NOTABLE=10000    # DOT amount for notable movement
LARGE_MOVEMENT_IMPORTANT=100000 # DOT amount for important movement
LARGE_MOVEMENT_CRITICAL=1000000 # DOT amount for critical movement
COORDINATION_WINDOW_MINUTES=60  # Time window for coordination detection
MIN_COORDINATED_WHALES=3        # Minimum whales for coordination alert

# Demo Mode
DEMO_MODE=false                 # Set to true for demo mode with mock data

# Logging
LOG_LEVEL=info                  # debug, info, warn, error
LOG_TO_FILE=true               # Save logs to file